<!DOCTYPE html>

<html lang="en">

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>All Employees</title>

      </head>
  <body>
      <div>
          <h1>All users</h1>

            <div class="table-responsive">
                <table class="table table-striped table-sm">

                    <thead>
                        <tr>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Year salary</th>
                        </tr>
                    </thead>

                    <tbody>
                            <% for user in @users %>
                                <tr>
                                    <td><%= user.fname %></td>
                                    <td><%= user.lname %></td>
                                    <td><%= user.ysalary %></td>
                                </tr>
                            <% end %>
                    </tbody>
                </table> 
            </div>
      </div>
  </body>
</html>
